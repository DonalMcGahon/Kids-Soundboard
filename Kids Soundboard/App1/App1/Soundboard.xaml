                    <Grid Width="400" Height="{Binding ElementName=flyoutPane, Path=Height}"  Background="#FF58E764" >
                        <TextBlock Height="50"  Text="Congrats, that is correct :)" />
                    </Grid>
                </Popup>

                <!-- Popup if answer is incorrect-->
                <Popup x:Name="ppup6" IsOpen="False" IsLightDismissEnabled="True" Width="320" HorizontalAlignment="Right">
