                    </Popup.ChildTransitions>
                    <Grid Width="400" Height="{Binding ElementName=flyoutPane, Path=Height}"  Background="#FFE75858" >
                        <TextBlock Height="50"  Text="I'm sorry, that is incorrect, please try again :)" />
                    </Grid>
                </Popup>

            </Grid>
